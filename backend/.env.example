# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flower_shop

# Development database (SQLite)
# DATABASE_URL=sqlite:///./flower_shop.db

# Security
# IMPORTANT: Generate a secure key with: openssl rand -hex 32
# Never use the default value in production!
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Telegram Bot Integration
# Get token from @BotFather in Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Application
APP_NAME="Cvety.kz API"
DEBUG=True
API_PREFIX=/api