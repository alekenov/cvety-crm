@import "tailwindcss";
@import "tw-animate-css";

@custom-variant dark (&:is(.dark *));

@theme inline {
  --radius-sm: calc(var(--radius) - 4px);
  --radius-md: calc(var(--radius) - 2px);
  --radius-lg: var(--radius);
  --radius-xl: calc(var(--radius) + 4px);
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-card: var(--card);
  --color-card-foreground: var(--card-foreground);
  --color-popover: var(--popover);
  --color-popover-foreground: var(--popover-foreground);
  --color-primary: var(--primary);
  --color-primary-foreground: var(--primary-foreground);
  --color-secondary: var(--secondary);
  --color-secondary-foreground: var(--secondary-foreground);
  --color-muted: var(--muted);
  --color-muted-foreground: var(--muted-foreground);
  --color-accent: var(--accent);
  --color-accent-foreground: var(--accent-foreground);
  --color-destructive: var(--destructive);
  --color-border: var(--border);
  --color-input: var(--input);
  --color-ring: var(--ring);
  --color-chart-1: var(--chart-1);
  --color-chart-2: var(--chart-2);
  --color-chart-3: var(--chart-3);
  --color-chart-4: var(--chart-4);
  --color-chart-5: var(--chart-5);
  --color-sidebar: var(--sidebar);
  --color-sidebar-foreground: var(--sidebar-foreground);
  --color-sidebar-primary: var(--sidebar-primary);
  --color-sidebar-primary-foreground: var(--sidebar-primary-foreground);
  --color-sidebar-accent: var(--sidebar-accent);
  --color-sidebar-accent-foreground: var(--sidebar-accent-foreground);
  --color-sidebar-border: var(--sidebar-border);
  --color-sidebar-ring: var(--sidebar-ring);
}

:root {
  --radius: 0.625rem;
  /* Background/Foreground - Zinc */
  --background: oklch(0.985 0 0); /* zinc-50 #FAFAFA */
  --foreground: oklch(0.145 0 0); /* zinc-900 #18181B */
  /* Card - Zinc */
  --card: oklch(0.97 0 0); /* zinc-100 #F4F4F5 */
  --card-foreground: oklch(0.145 0 0); /* zinc-900 #18181B */
  /* Popover */
  --popover: oklch(1 0 0);
  --popover-foreground: oklch(0.145 0 0);
  /* Primary - Violet */
  --primary: oklch(0.608 0.182 293.05); /* violet-600 #8E51FF */
  --primary-foreground: oklch(0.985 0.013 286.375); /* violet-50 #F5F3FF */
  /* Secondary - Zinc light */
  --secondary: oklch(0.97 0 0); /* zinc-100 */
  --secondary-foreground: oklch(0.145 0 0); /* zinc-900 */
  /* Muted - Zinc */
  --muted: oklch(0.97 0 0); /* zinc-100 */
  --muted-foreground: oklch(0.616 0.006 264.535); /* zinc-500 */
  /* Accent - Indigo */
  --accent: oklch(0.555 0.201 272.314); /* indigo-600 #4F39F6 */
  --accent-foreground: oklch(0.976 0.007 286.029); /* indigo-50 #EEF2FF */
  /* Destructive - Rose */
  --destructive: oklch(0.565 0.255 21.43); /* rose-600 #EC003F */
  /* Borders/Input - Zinc */
  --border: oklch(0.922 0 0); /* zinc-200 #E4E4E7 */
  --input: oklch(0.922 0 0); /* zinc-200 #E4E4E7 */
  /* Ring - Violet */
  --ring: oklch(0.608 0.182 293.05); /* violet-600 */
  /* Chart colors - Using palette */
  --chart-1: oklch(0.608 0.182 293.05); /* violet-600 */
  --chart-2: oklch(0.555 0.201 272.314); /* indigo-600 */
  --chart-3: oklch(0.615 0.165 158.108); /* emerald-600 */
  --chart-4: oklch(0.654 0.179 56.415); /* amber-600 */
  --chart-5: oklch(0.616 0.221 218.621); /* sky-600 */
  /* Sidebar */
  --sidebar: oklch(0.985 0 0); /* zinc-50 */
  --sidebar-foreground: oklch(0.145 0 0); /* zinc-900 */
  --sidebar-primary: oklch(0.608 0.182 293.05); /* violet-600 */
  --sidebar-primary-foreground: oklch(0.985 0.013 286.375); /* violet-50 */
  --sidebar-accent: oklch(0.97 0 0); /* zinc-100 */
  --sidebar-accent-foreground: oklch(0.145 0 0); /* zinc-900 */
  --sidebar-border: oklch(0.922 0 0); /* zinc-200 */
  --sidebar-ring: oklch(0.608 0.182 293.05); /* violet-600 */
}

.dark {
  /* Background/Foreground - Zinc dark */
  --background: oklch(0.116 0 0); /* zinc-950 #09090B */
  --foreground: oklch(0.97 0 0); /* zinc-100 #F4F4F5 */
  /* Card - Zinc dark */
  --card: oklch(0.145 0 0); /* zinc-900 #18181B */
  --card-foreground: oklch(0.97 0 0); /* zinc-100 #F4F4F5 */
  /* Popover */
  --popover: oklch(0.145 0 0); /* zinc-900 */
  --popover-foreground: oklch(0.97 0 0); /* zinc-100 */
  /* Primary - Violet (same in dark) */
  --primary: oklch(0.608 0.182 293.05); /* violet-600 #8E51FF */
  --primary-foreground: oklch(1 0 0); /* white */
  /* Secondary - Zinc dark */
  --secondary: oklch(0.269 0 0); /* zinc-800 #27272A */
  --secondary-foreground: oklch(0.97 0 0); /* zinc-100 */
  /* Muted - Zinc dark */
  --muted: oklch(0.269 0 0); /* zinc-800 #27272A */
  --muted-foreground: oklch(0.708 0 0); /* zinc-400 */
  /* Accent - Indigo (same in dark) */
  --accent: oklch(0.555 0.201 272.314); /* indigo-600 #4F39F6 */
  --accent-foreground: oklch(1 0 0); /* white */
  /* Destructive - Rose adjusted for dark */
  --destructive: oklch(0.645 0.246 16.439); /* rose-500 */
  /* Borders/Input - Zinc dark */
  --border: oklch(0.269 0 0); /* zinc-800 #27272A */
  --input: oklch(0.269 0 0); /* zinc-800 #27272A */
  /* Ring - Violet */
  --ring: oklch(0.608 0.182 293.05); /* violet-600 */
  /* Chart colors - Adjusted for dark */
  --chart-1: oklch(0.694 0.145 293.428); /* violet-400 */
  --chart-2: oklch(0.648 0.162 273.804); /* indigo-400 */
  --chart-3: oklch(0.697 0.141 158.19); /* emerald-400 */
  --chart-4: oklch(0.744 0.172 64.866); /* amber-400 */
  --chart-5: oklch(0.695 0.19 221.251); /* sky-400 */
  /* Sidebar dark */
  --sidebar: oklch(0.145 0 0); /* zinc-900 */
  --sidebar-foreground: oklch(0.97 0 0); /* zinc-100 */
  --sidebar-primary: oklch(0.608 0.182 293.05); /* violet-600 */
  --sidebar-primary-foreground: oklch(1 0 0); /* white */
  --sidebar-accent: oklch(0.269 0 0); /* zinc-800 */
  --sidebar-accent-foreground: oklch(0.97 0 0); /* zinc-100 */
  --sidebar-border: oklch(0.269 0 0); /* zinc-800 */
  --sidebar-ring: oklch(0.608 0.182 293.05); /* violet-600 */
}

@layer base {
  * {
    @apply border-border outline-ring/50;
  }
  body {
    @apply bg-background text-foreground;
  }
}