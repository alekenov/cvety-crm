# Railway Environment Variables Example
# Copy this file to .env for local development
# Set these in Railway Dashboard for production

# Database
# For local development:
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/flower_shop
# Railway provides DATABASE_URL automatically when you add PostgreSQL

# Security
SECRET_KEY=your-secret-key-here-change-in-production
# Generate secure key: openssl rand -hex 32

# Railway Environment (auto-set by Railway)
# RAILWAY_ENVIRONMENT=production
# PORT=<dynamic>

# Application Settings
APP_NAME="Cvety.kz Flower Shop"
DEBUG=false
CORS_ORIGINS=["https://your-app.up.railway.app"]

# Optional: Performance
WORKERS=1  # Railway free tier works best with 1 worker
LOG_LEVEL=info

# Optional: Monitoring (add if needed)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ENABLE_METRICS=true